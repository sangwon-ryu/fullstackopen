const App = () => {
	const course = 'Half Stack application development'
	const parts = [
		{
		  name: 'Fundamentals of React',
		  exercises: 10
		},
		{
		  name: 'Using props to pass data',
		  exercises: 7
		},
		{
		  name: 'State of a component',
		  exercises: 14
		}
	]

	return (
		<div>
			<Header course={course} />
			<Content parts={parts} />
			<Total parts={parts} />
		</div>
	)
}

const Header = (props) => {
	return (
		<div>
			<h1>
        {props.course}
      </h1>
		</div>
	)
}

const Content = (props) => {
	const stacks = props.parts.map(function(product) {
		return (
			<div>
				<p> 
          {product.name}: {product.exercises}
        </p>
			</div>
		)
	})
	
	return stacks
}

const Total = (props) => {
	var num = 0

	const lists = props.parts.map(function(product) {
		
		num = num + product.exercises 
		
	})
	
	return (
		<div>
			<p>Number of exercises: {num} </p>
		</div>
	)
}

export default App
